<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_white"
    tools:context="com.ldh.mytools.activity.HomeActivity">

    <ImageView
        android:id="@+id/parallax"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_marginTop="-120dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_me" />


    <com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout
        android:id="@+id/mRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:tr_head_height="100dp"
        app:tr_wave_height="180dp">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/mScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/myViewAnimation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp70"
                    android:src="@drawable/img_head_default" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp96"
                    android:layout_marginTop="@dimen/dp96"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:text="睿智" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp96"
                    android:layout_marginTop="@dimen/dp96"
                    android:gravity="center"
                    android:text="@string/home" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp96"
                    android:layout_marginTop="@dimen/dp96"
                    android:gravity="center"
                    android:text="@string/home" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp96"
                    android:layout_marginTop="@dimen/dp96"
                    android:gravity="center"
                    android:text="@string/home" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp96"
                    android:layout_marginTop="@dimen/dp96"
                    android:gravity="center"
                    android:text="@string/home" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp96"
                    android:layout_marginTop="@dimen/dp96"
                    android:gravity="center"
                    android:text="@string/home" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp96"
                    android:layout_marginTop="@dimen/dp96"
                    android:gravity="center"
                    android:text="@string/home" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp96"
                    android:layout_marginTop="@dimen/dp96"
                    android:gravity="center"
                    android:text="@string/home" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp96"
                    android:layout_marginTop="@dimen/dp96"
                    android:gravity="center"
                    android:text="@string/home" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp96"
                    android:layout_marginTop="@dimen/dp96"
                    android:gravity="center"
                    android:text="@string/home" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp96"
                    android:layout_marginTop="@dimen/dp96"
                    android:gravity="center"
                    android:text="@string/home" />
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>

    <include layout="@layout/title_bar" />
</RelativeLayout>
